<head>
  <link rel="stylesheet" href="/css/admin.css" />

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous"
  />
</head>

<body class="p-relative">
  <div class="main-container">
    <div class="slide-page p-fixed t-0 l-0">
      <div id="Menu">
        <h1>ADMIN</h1>
        <div class="menu">
          <a href="/">
            <i class="fa-solid fa-bars"></i>
            Home page
          </a>
          <a class="user" href="/login/admin">
            <i class="fa-solid fa-users"></i>
            User Management
          </a>

          <a class="content" href="/login/admin/songmanagement">
            <i class="fa-solid fa-music"></i>
            Song Management
          </a>

          <a class="playlist" href="/login/admin/playlistmanagement">
            <i class="fa-solid fa-table-list"></i>
            PlayList Management
          </a>

          <a class="active album" href="/login/admin/albummanagement">
            <i class="fa-solid fa-compact-disc"></i>
            ALbum Management
          </a>
          <a class="artist" href="/login/admin/artistmanagement">
            <i class="fa-solid fa-microphone"></i>
            Artist Management
          </a>

        </div>
      </div>
    </div>
    <header class="flex a-center p-fixed t-0 r-0">
      <div class="account flex a-center">
        <img src="image/Ellipse 2.png" alt="" />
        <h4 class="name">Alex</h4>
      </div>
    </header>
    <div class="main-page">
      <div class="album-detail-container flex j-between">
        <div class="album-poster flex a-center">
          {{#each albumById}}
            <a class="poster" href="">
              <img src="{{Image}}" alt="" />
            </a>
            <h3 class="name-album">{{Name}}</h3>
            <span href="" class="author">{{artist_name}}</span>
            <div class="btnss">
              <button data-toggle="modal" data-target="#1" class="delete"><i
                  class="fa-solid fa-xmark"
                ></i></button>
            </div>
          {{/each}}
        </div>
        <div class="album-song">
          <div class="header flex a-center">
            <button class="arrange"><i
                class="fa-solid fa-arrow-up-z-a"
              ></i></button>
            <h3>Bài hát</h3>
            <div class="line"></div>
          </div>
          <div class="media-list">
            {{#each albumsong}}
              <div class="media-item flex a-center j-between">
                <div class="media-left flex a-center">
                  <a href=""><img src="{{Image}}" alt="" /></a>
                  <div class="detail">
                    <h3>{{Name}}</h3>
                    <span>{{artist_name}}</span>
                  </div>
                </div>
                <div class="media-right">
                  <span class="time">{{Time}}</span>
                  <button class="heart"><i
                      class="fa-solid fa-heart like"
                    ></i></button>
                  <button class="plus"><i class="fa-solid fa-plus"></i></button>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- modal xoá song -->

  <form method="post" name="delete-song-form"></form>
  <div id="1" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Modal title</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Modal body text goes here.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Save changes</button>
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Close</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/admin.js"></script>

</body>